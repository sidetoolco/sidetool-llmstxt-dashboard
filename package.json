{
  "name": "sidetool-llmstxt-generator",
  "version": "1.0.0",
  "description": "Automated LLMs.txt generator for sidetool.co with Supabase integration",
  "main": "generate_sidetool_llmstxt.py",
  "scripts": {
    "generate": "python3 generate_sidetool_llmstxt.py",
    "generate:verbose": "python3 generate_sidetool_llmstxt.py --verbose",
    "supabase:link": "supabase link",
    "supabase:push": "supabase db push",
    "supabase:deploy": "npm run supabase:deploy:generate && npm run supabase:deploy:cron",
    "supabase:deploy:generate": "supabase functions deploy generate-llmstxt --no-verify-jwt",
    "supabase:deploy:cron": "supabase functions deploy cron-trigger --no-verify-jwt",
    "supabase:logs": "supabase functions logs generate-llmstxt",
    "supabase:test": "curl -X POST $SUPABASE_URL/functions/v1/generate-llmstxt -H 'Authorization: Bearer $SUPABASE_SERVICE_ROLE_KEY' -H 'Content-Type: application/json'"
  },
  "keywords": [
    "llms.txt",
    "sidetool",
    "firecrawl",
    "openai",
    "supabase",
    "edge-functions",
    "cron",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "supabase": "^1.142.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}